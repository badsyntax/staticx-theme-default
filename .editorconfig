# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,json,jshintrc,html,css,sass,scss,less}]
indent_style = space
indent_size = 2

[*.{css,sass,scss,less}]
indent_style = space
indent_size = 4

[*.json]
indent_style = tab
indent_size = 2
